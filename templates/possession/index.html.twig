{% extends 'base.html.twig' %}

{% block title %}Possession index{% endblock %}

{% block body %}
    <h1>Possession index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Valeur</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for possession in possessions %}
            <tr>
                <td>{{ possession.id }}</td>
                <td>{{ possession.name }}</td>
                <td>{{ possession.valeur }}</td>
                <td>{{ possession.type }}</td>
                <td>
                    <a href="{{ path('app_possession_show', {'id': possession.id}) }}">show</a>
                    <a href="{{ path('app_possession_edit', {'id': possession.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_possession_new') }}">Create new</a>
{% endblock %}
